{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"plugins": ["react"],

	"extends": "react/recommended",
	"rules": {
		"semi": ["error", "never"],
		"no-console": [
			"error",
			{
				"allow": ["warn", "error"]
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		]
	}
}
